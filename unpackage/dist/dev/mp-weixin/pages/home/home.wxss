.background {
  position: absolute;
  z-index: -3;
  margin-top: 0rpx;
}
.background ._img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  margin-bottom: -100rpx;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  height: 100%;
}
.content .top-img1 {
  position: relative;
  z-index: -1;
  margin-top: 0;
}
.content .top-img2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  margin-top: -50rpx;
  z-index: 1;
}
.content .search {
  position: absolute;
  margin-top: 80rpx;
  z-index: 2;
}
.wiper {
  margin-top: 40rpx;
  padding: 0 25rpx;
}
.hot-spot {
  display: flex;
  text-align: center;
  width: 95%;
  height: 650rpx;
  background-color: #FFFFFF;
  margin: 40rpx auto;
  border-radius: 20rpx;
}
.hot-spot .head {
  height: 10%;
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.hot-spot .head .iconfont {
  color: #E2000B;
  font-size: 40rpx;
  margin-left: 20rpx;
}
.hot-spot .head .text1 {
  font-size: 32rpx;
  font-weight: 600;
  margin-left: 10rpx;
}
.hot-spot .head .text2 {
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #670F13;
}
.learning-link {
  width: 95%;
  height: 350rpx;
  background-color: #FFFFFF;
  margin: 40rpx auto;
  border-radius: 20rpx;
  opacity: 0.8;
}
.learning-link .head {
  display: flex;
  text-align: center;
  width: 100%;
  height: 10%;
}
.learning-link .head text {
  margin: 20rpx auto;
  font-size: 32rpx;
  font-weight: 600;
}
.learning-link .content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  width: 100%;
  height: 80%;
}
.learning-link .content .linkItem {
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 25%;
  height: 200rpx;
  margin: 30rpx 0 0 0;
}
.learning-link .content .linkItem .img {
  padding-left: 40rpx;
  width: 90%;
  height: 60%;
  display: flex;
  align-items: center;
  text-align: center;
}
.learning-link .content .linkItem .img ._img {
  width: 70%;
}
.learning-link .content .linkItem text {
  font-size: 20rpx;
  margin-top: 20rpx;
  font-weight: 600;
}

