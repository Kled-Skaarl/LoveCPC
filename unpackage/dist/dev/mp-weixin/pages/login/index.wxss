.box {
  height: 100vh;
  width: 100%;
  margin: 0;
  padding: 0;
  background-color: indianred;
  position: relative;
  display: flex;
  justify-content: center;
}
.box .backGroundImg {
  width: 100%;
  height: 100%;
}
.box .backGroundImg image {
  height: 100%;
  width: 100%;
}
.box .backGroundImg .loveCPC {
  position: absolute;
  top: 2%;
  left: 2%;
  width: 60%;
  height: 150rpx;
  z-index: 100;
}
.box .card {
  background-color: white;
  width: 85%;
  height: 50%;
  position: absolute;
  top: 25%;
  border-radius: 30rpx;
  text-align: center;
  display: flex;
  justify-content: center;
}
.box .card #logo {
  width: 20%;
  height: 15%;
  display: inline-block;
  position: absolute;
  margin-top: -60rpx;
}
.box .card .form {
  width: 100%;
  margin-top: 180rpx;
}
.box .card .form .input-id {
  display: flex;
  justify-content: space-between;
}
.box .card .form .input-pw {
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
}
.box .card .form ._p {
  margin-left: 50rpx;
}
.box .card .form input {
  outline-style: none;
  border: 1px solid #ccc;
  border-radius: 3px;
  height: 50rpx;
  width: 70%;
  margin-right: 40rpx;
}
.box .card .btn {
  position: absolute;
  width: 100%;
  height: 100rpx;
  bottom: 250rpx;
  display: flex;
  justify-content: space-between;
}
.box .card .btn .btn-item {
  height: 80%;
  width: 40%;
}

