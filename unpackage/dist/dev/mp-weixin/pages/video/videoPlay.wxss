.main {
  position: absolute;
  background-color: #FDDFCA;
  min-height: calc(100vh);
  height: auto;
  padding-bottom: 50rpx;
}
.top-text {
  position: absolute;
  top: 0;
  height: 300rpx;
  width: 100%;
}
.top-text #redflag {
  height: 80%;
  width: 100%;
}
.top-text .text {
  height: 50%;
  position: relative;
  top: -200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.top-text .text #topimg1 {
  width: 60%;
  height: 90%;
}
.top-text .text #GJcpc {
  margin-top: 40rpx;
  height: 30%;
  width: 70%;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  height: 100%;
}
.content .top-img1 {
  position: relative;
  z-index: 1;
  margin-top: 0;
}
.content .top-img2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  margin-top: -50rpx;
  z-index: 2;
}
.content .search {
  position: absolute;
  bottom: 10rpx;
  z-index: 2;
}
.videoPlay {
  position: relative;
  top: 150rpx;
  margin-top: 80rpx;
  height: 500rpx;
  width: 100%;
  display: flex;
  text-align: center;
  justify-content: center;
}
.videoPlay video {
  width: 100%;
  height: 450rpx;
}
.article {
  position: relative;
  top: 100rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #F6EEE9;
  margin-left: auto;
  margin-right: auto;
  width: 98%;
  border-radius: 20rpx;
  min-height: calc(40vh);
  height: auto;
  margin-top: 20rpx;
}
.article .head {
  height: 100rpx;
  width: 100%;
  text-align: center;
}
.article .head text {
  margin-top: 20rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #6C171B;
}
.article .head .line {
  width: 90%;
  height: 1rpx;
  border-top: solid #F60001 3rpx;
  margin: 20rpx auto;
}
.article .detail {
  margin: 20rpx auto;
  height: auto;
  width: 90%;
  font-size: 32rpx;
  color: #131211;
}
.article .detail .top-title {
  height: 100rpx;
  margin-bottom: 50rpx;
  font-size: 35rpx;
  font-weight: 700;
}

